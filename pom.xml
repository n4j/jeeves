                    <goals>
                        <goal>copy-resources</goal>
                    </goals>
                    <configuration>
                        <addDefaultExcludes>true</addDefaultExcludes>
                        <outputDirectory>${basedir}/target/extra-resources</outputDirectory>
                        <fileNameFiltering>true</fileNameFiltering>
                        <resources>
